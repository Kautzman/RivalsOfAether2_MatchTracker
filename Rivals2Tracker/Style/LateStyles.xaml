    <Style x:Key="CancelStartMatchLabel" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                       Path=ActualWidth,
                                       Converter={StaticResource WidthToRangeConverter},
                                       ConverterParameter=Small}"
                                       Value="True">
                <Setter Property="FontSize" Value="18" />
            </DataTrigger>

            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                       Path=ActualWidth,
                                       Converter={StaticResource WidthToRangeConverter},
                                       ConverterParameter=Medium}"
                                       Value="True">
                <Setter Property="FontSize" Value="26" />
            </DataTrigger>

            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                       Path=ActualWidth,
                                       Converter={StaticResource WidthToRangeConverter},
                                       ConverterParameter=Large}"
                                       Value="True">
                <Setter Property="FontSize" Value="26" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
