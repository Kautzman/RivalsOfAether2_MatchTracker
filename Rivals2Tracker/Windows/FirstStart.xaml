<kwin:kWindow x:Class="Slipstream.Windows.FirstStart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slipstream.Windows"
        xmlns:kwin="clr-namespace:kWindows.Core"
        mc:Ignorable="d"
        Title="FirstStart" Height="900" Width="1400"
        ResizeMode="NoResize"
        Style="{StaticResource BaseWindow}">
    <kwin:kWindow.DataContext>
        <local:FirstStart_VM />
    </kwin:kWindow.DataContext>
    <Grid Background="{StaticResource LGR_Blue_Opacity}">
        <Grid Background="{StaticResource LGR_Blue_Opacity}">
            <Grid Height="70" Background="{StaticResource LGR_Banner}" MouseDown="EnableDrag" VerticalAlignment="Top">
                <Label Content="Welcome" FontFamily="Franklin Gothic Demi" FontSize="32" Margin="10, 10, 0, 0" Grid.ColumnSpan="3" IsHitTestVisible="False"/>
                <Label Content="Slipstream v0.5.0 - Beta" FontSize="20" Margin="10, 10, 0, 0" Foreground="#c0c0f0" Grid.ColumnSpan="3" HorizontalAlignment="Center" IsHitTestVisible="False"/>

                <Button x:Name="WindowClose" Style="{StaticResource WindowingButton_Close}" Click="WindowCloseClick" VerticalAlignment="Top">
                    <Image Style="{StaticResource Windowing_Image}" Source="/Slipstream;component/Resources/Icons/Windowing/Close.png" />
                </Button>

                <StackPanel VerticalAlignment="Bottom">
                    <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom" />
                    <Border BorderBrush="{StaticResource FG_DarkGold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom"/>
                    <Border BorderBrush="{StaticResource FG_DarkDarkGold}" BorderThickness="0, 1, 0, 0" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Grid>

            <Grid Margin="0, 70, 0, 0">
                <Label Content="{Binding SectionTitle}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="60" Width="600" Foreground="White" FontSize="36"/>
                <TextBlock Text="{Binding SectionText}" Foreground="White" FontSize="18" Margin="20, 60, 730, 0" TextWrapping="Wrap" />

                <Border HorizontalAlignment="Center" BorderThickness="1, 0, 0, 0" BorderBrush="{StaticResource FG_BlueLabel}" Margin="0, 100, 0, 100"/>
                <Grid Width="700" HorizontalAlignment="Right">
                    <Image Source="{Binding SectionImage}" Width="650" Height="366" HorizontalAlignment="Center" Margin="0, 200, 25, 0" VerticalAlignment="Top"/>
                </Grid>
                <Label Width="650" Height="80" HorizontalAlignment="Right" Margin="0, 566, 40, 0" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="18" FontStyle="Italic">
                    <TextBlock Text="{Binding SectionImageCaption}" TextWrapping="Wrap" />
                </Label>

                <Button Width="150" Margin="280, 190, 0, 0" Content="Open Settings" Foreground="{StaticResource FG_BlueLabel}" FontSize="18" FontFamily="Franklin Gothic Demi Cond" BorderThickness="1"
                        Background="{StaticResource BG_DarkBlue}" Height="50" Command="{Binding OpenSettingsCommand}" HorizontalAlignment="Left" Visibility="{Binding SettingsVisibility}"/>

                <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="60" Margin="0, 0, 0, 30" Orientation="Horizontal">
                    <Button Width="80" Content="Previous" Foreground="{StaticResource FG_BlueLabel}" FontSize="18" FontFamily="Franklin Gothic Demi Cond" BorderThickness="1"
                            Background="{StaticResource BG_DarkBlue}" Height="40" Command="{Binding PreviousSlideCommand}"/>
                    <Button Width="80" Margin="40, 0, 0, 0" Content="Next" Foreground="{StaticResource FG_BlueLabel}" FontSize="18" FontFamily="Franklin Gothic Demi Cond" BorderThickness="1"
                            Background="{StaticResource BG_DarkBlue}" Height="40" Command="{Binding NextSlideCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</kwin:kWindow>
