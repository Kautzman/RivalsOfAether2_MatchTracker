<kwin:kWindow x:Class="Rivals2Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rivals2Tracker"
        xmlns:controls="clr-namespace:Rivals2Tracker.Resources.Controls"
        xmlns:kwin="clr-namespace:kWindows.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="1400" Width="2560"
        Style="{StaticResource BaseWindow}">
    <kwin:kWindow.DataContext>
        <local:MainWindow_VM />
    </kwin:kWindow.DataContext>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="8, 4, 8, 8" />
    </WindowChrome.WindowChrome>
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <DockPanel>
            <!-- Top Bar-->
            <Grid DockPanel.Dock="Top" Background="{StaticResource LGR_Banner}" Height="130" MouseDown="EnableDrag" Panel.ZIndex="1000">

                <Label Content="COMPLETED" Panel.ZIndex="1001" FontSize="54" Margin="230, 50, 0, 0" Width="400" HorizontalAlignment="Left" FontFamily="Franklin Gothic Demi Cond" Foreground="{StaticResource FG_Gold}" IsHitTestVisible="False"
                       Visibility="{Binding CompletedLabelVisibility}">
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="0" ShadowDepth="6" BlurRadius="1" Opacity="1" />
                    </Label.Effect>
                    <Label.RenderTransform>
                        <RotateTransform Angle="-10" />
                    </Label.RenderTransform>
                </Label>

                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Panel.ZIndex="1000">
                    <Grid Margin="145, 8, 0, 0">

                        <Label Content="Set My Tag..." Visibility="{Binding IsMyTagPhVisible}" IsHitTestVisible="False" FontStyle="Italic" FontSize="16" Margin="105, 15, 0, 0" Foreground="{StaticResource FG_Control_Disabled}"/>
                        <Label Content="Set My Elo..." Visibility="{Binding IsMyEloPhVisible}" IsHitTestVisible="False" FontStyle="Italic" FontSize="16" Margin="105, 0, 0, 23" VerticalAlignment="Bottom" Foreground="{StaticResource FG_Control_Disabled}"/>


                        <TextBox Text="{Binding MyName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TabIndex="1" KeyDown="TextBox_KeyDown" MinWidth="160" FontFamily="Franklin Gothic Demi Cond" Background="Transparent" FontSize="42" Height="60" VerticalAlignment="Top" />
                        <!--<Label Content="INSERT NAME" FontFamily="Franklin Gothic Demi Cond" FontSize="36" Height="60" VerticalAlignment="Top" Foreground="{StaticResource FG_GreyLabel}" IsHitTestVisible="False" Visibility="{Binding LocalPlayerNameVisibility}"/>-->
                        <TextBox Text="{Binding MyElo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TabIndex="2" KeyDown="TextBox_KeyDown" MinWidth="160" Margin="0, 0, 0, 10" FontFamily="{StaticResource AfterDisaster}" Background="Transparent" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Height="50" VerticalAlignment="Bottom" />
                    </Grid>

                    <Label Content="VS" FontFamily="Franklin Gothic Demi Cond" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Margin="30, 0, 0, 0" VerticalAlignment="Center" />

                    <Grid Margin="0, 8, 0, 0">
                        <!-- Button For Main -->
                        <Button Name="ImageSelectorButton" Grid.Row="0" Width="74" Height="74" Margin="15, 20, 20, 20" HorizontalAlignment="Left" Command="{Binding ShowFlyoutCommand}"
                                BorderThickness="2" BorderBrush="Transparent" Style="{StaticResource MainImageButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="{Binding SelectedImagePath}" Stretch="UniformToFill"/>
                            </Button.Background>
                        </Button>

                        <!-- Flyout Popup For Main -->
                        <Popup Name="ImageFlyout" Grid.Row="0" PlacementTarget="{Binding ElementName=ImageSelectorButton}" Placement="Bottom" IsOpen="{Binding IsOppFlyoutOpen}" StaysOpen="False"
                            AllowsTransparency="True" PopupAnimation="Slide">
                            <Border Background="{StaticResource BG_DarkBlue}" BorderBrush="{StaticResource FG_BlueLabel}" BorderThickness="1" CornerRadius="0" Padding="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" Opacity="0.3"/>
                                </Border.Effect>

                                <ItemsControl ItemsSource="{Binding AvailableCharacters}" ItemTemplate="{StaticResource CharacterItemTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Width="280" Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </Border>
                        </Popup>

                        <!-- Button For Secondary -->
                        <Grid Margin="66, 50, 0, 0">
                            <Button Name="ImageSelectorButtonSecondary" Grid.Row="0" Width="36" Height="36" Margin="20" HorizontalAlignment="Left" Command="{Binding ShowSecondaryFlyoutCommand}"
                                    BorderThickness="2" BorderBrush="Transparent" Style="{StaticResource MainImageButtonStyle}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding SecondarySelectedImagePath, TargetNullValue=C:\\Users\\mkautzman\\Documents\\Projects\\RivalsOfAether2_MatchTracker\\Rivals2Tracker\\Resources\\CharacterIcons\\unknown.png}" Stretch="UniformToFill"/>
                                </Button.Background>
                            </Button>

                            <!-- Flyout Popup For Secondary -->
                            <Popup Name="ImageFlyoutSecondary" Grid.Row="0" PlacementTarget="{Binding ElementName=ImageSelectorButtonSecondary}" Placement="Bottom" IsOpen="{Binding IsSecondaryFlyoutOpen}" StaysOpen="False"
                                AllowsTransparency="True" PopupAnimation="Slide">
                                <Border Background="{StaticResource BG_DarkBlue}" BorderBrush="{StaticResource FG_BlueLabel}" BorderThickness="1" CornerRadius="0" Padding="0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" Opacity="0.3"/>
                                    </Border.Effect>

                                    <ItemsControl ItemsSource="{Binding AvailableCharacters}" ItemTemplate="{StaticResource SecondaryCharacterItemTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Width="280" Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </Border>
                            </Popup>
                        </Grid>

                        <Grid Margin="20, 0, 0, 0">
                            <!-- TODO: This whole pattern with the PH labels is nonsense.  This needs to be a usercontrol -->
                            <Label Content="Set Opponent Tag..." Visibility="{Binding IsOpponentTagPhVisible}" IsHitTestVisible="False" FontStyle="Italic" FontSize="16" Margin="105, 15, 0, 0" Foreground="{StaticResource FG_Control_Disabled}"/>
                            <Label Content="Set Opponent Elo..." Visibility="{Binding IsOpponentTagPhVisible}" IsHitTestVisible="False" FontStyle="Italic" FontSize="16" Margin="105, 0, 0, 23" VerticalAlignment="Bottom" Foreground="{StaticResource FG_Control_Disabled}"/>

                            <TextBox Text="{Binding OpponentName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TabIndex="3" KeyDown="TextBox_KeyDown" MinWidth="240"
                                     Margin="105, 0, 0, 0" FontFamily="Franklin Gothic Demi Cond" Background="Transparent" FontSize="42" Height="60" VerticalAlignment="Top" />
                            <TextBox Text="{Binding OpponentElo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TabIndex="4" KeyDown="TextBox_KeyDown" MinWidth="160"
                                     Margin="105, 0, 0, 10" FontFamily="{StaticResource AfterDisaster}" Background="Transparent" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Height="50" VerticalAlignment="Bottom" />
                        </Grid>
                    </Grid>
                </StackPanel>

                <Label Content="{Binding ActiveMatchStatusString, UpdateSourceTrigger=PropertyChanged}" Name="FocusDump" Focusable="True" FontFamily="Franklin Gothic Demi" Foreground="{StaticResource FG_WhiteLabel}" FontSize="38" Margin="0, 0, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Center" />
                <Label Content="{Binding ActivityText, UpdateSourceTrigger=PropertyChanged}" FontFamily="Franklin Gothic Demi" Foreground="{StaticResource FG_Gold}" FontSize="18" Margin="0, 45, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Center" />

                <StackPanel VerticalAlignment="Bottom">
                    <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom" />
                    <Border BorderBrush="{StaticResource FG_DarkGold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom"/>
                    <Border BorderBrush="{StaticResource FG_DarkDarkGold}" BorderThickness="0, 1, 0, 0" VerticalAlignment="Bottom"/>
                </StackPanel>

                <Border Width="450" Height="80" BorderBrush="{StaticResource FG_DarkGold}" BorderThickness="2" Background="{StaticResource BG_DarkBlue}" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                               CornerRadius="25" Margin="0, 0, 0, -30">
                    <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="3" Background="{StaticResource BG_DarkBlue}" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                               CornerRadius="20" Margin="0">
                        <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="1" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                               CornerRadius="15" Margin="0" Loaded="OuterBorder_Loaded">
                            <Grid Width="450" Height="80">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="WIN" Width="150" Height="80" FontSize="32" FontFamily="Franklin Gothic Demi Cond" BorderThickness="0" Background="{StaticResource BG_DarkBlue}"
                                            Foreground="{StaticResource FG_BlueLabel}" Padding="0, 0, 0, 12" Command="{Binding SetMatchWinCommand}"/>
                                    <Button Content="LOSE" Width="150" Height="80" FontSize="32" FontFamily="Franklin Gothic Demi Cond" BorderThickness="3, 0, 3, 0" Background="{StaticResource BG_DarkBlue}"
                                            Foreground="{StaticResource FG_BlueLabel}" Padding="0, 0, 0, 12" Command="{Binding SetMatchLoseCommand}"/>
                                    <Button Content="CANCEL" Width="150" Height="80" FontSize="28" FontFamily="Franklin Gothic Demi Cond" BorderThickness="0" Background="{StaticResource BG_DarkBlue}"
                                            Foreground="{StaticResource FG_BlueLabel}" VerticalContentAlignment="Center" Padding="0, 0, 15, 12" Command="{Binding SetMatchDiscardCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Border>
                </Border>

                <Grid HorizontalAlignment="Right" Margin="0, 0, 100, 0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <Label Content="Patch:" FontFamily="Franklin Gothic Demi" KeyDown="TextBox_KeyDown" FontStyle="Italic" Foreground="{StaticResource FG_BlueLabel}" FontSize="48" Margin="30, 0, 0, 0"  />
                        <TextBox Text="{Binding CurrentPatch, UpdateSourceTrigger=PropertyChanged}" FontFamily="{StaticResource AfterDisaster}" Background="Transparent" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Height="60" Margin="10, 6, 20, 0"/>
                    </StackPanel>

                    <!--<Label Content="Write some notes here about the match if you want" Visibility="{Binding NotesVisibility}" Height="60" Margin="0, 0, 20, 5" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="24" Foreground="{StaticResource FG_GreyLabel}"/>-->

                    <Label Content="Set My Elo..." Visibility="{Binding IsNotesPhVisible}" IsHitTestVisible="False" FontStyle="Italic" FontSize="16" Margin="105, 0, 0, 23" VerticalAlignment="Bottom" Foreground="{StaticResource FG_Control_Disabled}"/>

                    <TextBox Text="{Binding ActiveMatchNotes}" TabIndex="5" KeyDown="TextBox_KeyDown" FontFamily="Franklin Gothic Demi" Width="800" Background="Transparent" FontSize="24" Height="60" Margin="0, 0, 20, 10"
                         VerticalAlignment="Bottom" HorizontalAlignment="Right" HorizontalContentAlignment="Right"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button x:Name="WindowMinimize" Style="{StaticResource WindowingButton}" Click="WindowMiminizeClick">
                        <Image Style="{StaticResource Windowing_Image}" Source="/Rivals2Tracker;component/Resources/Icons/Windowing/Minimize.png" />
                    </Button>

                    <Button x:Name="WindowMaximize" Style="{StaticResource WindowingButton}" Click="WindowMaximizeClick">
                        <Image Style="{StaticResource Windowing_MaxMinImage}"/>
                    </Button>

                    <Button x:Name="WindowClose" Style="{StaticResource WindowingButton_Close}" Click="WindowCloseClick">
                        <Image Style="{StaticResource Windowing_Image}" Source="/Rivals2Tracker;component/Resources/Icons/Windowing/Close.png" />
                    </Button>
                </StackPanel>

                <Button Width="68" Content="&#xE713;" FontSize="38" FontFamily="Segoe MDL2 Assets" Height="68" HorizontalAlignment="Right" Margin="0, 10, 18, 0"
                        Foreground="{StaticResource FG_BlueLabel}" Background="{StaticResource BG_DarkBlue}" BorderBrush="{StaticResource FG_BlueLabel}"
                        Command="{Binding ShowSettingsWindowCommand}" />
            </Grid>

            <!-- Bottom Content-->
            <Grid DockPanel.Dock="Bottom" Background="{StaticResource BG_DarkBlue}" Panel.ZIndex="1">
                <Image Source="pack://application:,,,/ImageResources/embossLogo2.png" Opacity="0.06" Width="900" />

                <Label Content="Recent Matches" FontFamily="Franklin Gothic Demi" FontSize="32" Margin="50, 25, 0, 0" Grid.ColumnSpan="3"/>

                <ListView ItemsSource="{Binding MatchResults}" ItemTemplate="{StaticResource MatchResultsFancy}" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"
                          BorderThickness="0" Margin="10,70,0,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource CustomListViewItemStyle}">
                            <Setter Property="Padding" Value="0, 2, 15, 0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <Grid Margin="963, 70, 0, 45" Background="Transparent" Grid.ColumnSpan="3">
                    <controls:ToggleSwitch x:Name="ResultTypeToggle" HorizontalAlignment="Left" VerticalAlignment="Top" OffContent="Seasonal"
                        OnContent="Lifetime" IsOn="{Binding ShowLifetimeResults, Mode=TwoWay}" Margin="203, 0, 0, 0" />

                    <ListView ItemsSource="{Binding DisplayedCharacterResults.CharacterData}" ItemTemplate="{StaticResource MetaResultTemplateFancy}" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"
                            BorderThickness="0" Margin="0, 50, 0, 0" SelectedItem="{Binding ActiveMatchSeason_CharacterData}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource CustomListViewItemStyle}">

                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>

                <ListView ItemsSource="{Binding ActiveMatchHistory.MatchResults}" ItemTemplate="{StaticResource MatchResultsFancy}" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top"
                          BorderThickness="0" Margin="0,70,10,0" Grid.Column="2" Visibility="{Binding CharacterMatchHistoryViewVisibility}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource CustomListViewItemStyle}">
                            <Setter Property="Padding" Value="0, 2, 15, 0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <Grid HorizontalAlignment="Right" Width="700" Visibility="{Binding PlayerMatchHistoryViewVisibility}">
                    <Grid Margin="10, 20, 0, 0">
                        <Label Content="Vs" FontFamily="Franklin Gothic Demi" FontSize="32" Margin="50, 25, 0, 0" Grid.ColumnSpan="3"/>
                        <Label Content="{Binding ActiveMatch.Opponent.Name}" FontFamily="Franklin Gothic Demi" FontSize="32" Margin="95, 25, 0, 0" Grid.ColumnSpan="3" Foreground="{StaticResource FG_BlueLabel}" />

                        <StackPanel Margin="78, 25, 50, 0" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Label Content="{Binding ActiveOpponent.WinsSeasonal}" FontFamily="Franklin Gothic Demi" FontSize="32"/>
                            <Label Content=" - " FontFamily="Franklin Gothic Demi" FontSize="32"/>
                            <Label Content="{Binding ActiveOpponent.LosesSeasonal}" FontFamily="Franklin Gothic Demi" FontSize="32"/>
                        </StackPanel>

                        <Label Content="{Binding ActiveOpponent.NotesLabel, UpdateSourceTrigger=PropertyChanged}" Margin="40, 100, 40, 0" VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </Grid>
        </DockPanel>

        <Border BorderBrush="{StaticResource GR_DarkBlue}" BorderThickness="4" Margin="15, 15, 0, 0" Width="128" Height="128" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="4">
                <Grid>
                    <!--<Image Source="pack://application:,,,/ImageResources/Portraits/wrastor_portrait.png" Panel.ZIndex="1000"/>-->

                    <!-- Button For Main -->
                    <Button Name="MySelectorButton" Grid.Row="0" Width="120" Height="120" Margin="0, 0, 0, 0" HorizontalAlignment="Left" Command="{Binding ShowMyFlyoutCommand}"
                                BorderThickness="2" BorderBrush="Transparent" Style="{StaticResource MainImageButtonStyle}" Panel.ZIndex="1000">
                        <Button.Background>
                            <ImageBrush ImageSource="{Binding MySelectedCharPortrait}" Stretch="UniformToFill" />
                        </Button.Background>
                    </Button>

                    <!-- Flyout Popup For Main -->
                    <Popup Name="MyFlyout" Grid.Row="0" PlacementTarget="{Binding ElementName=MySelectorButton}" Placement="Bottom" IsOpen="{Binding IsMyFlyoutOpen}" StaysOpen="False"
                            AllowsTransparency="True" PopupAnimation="Slide">
                        <Border Background="{StaticResource BG_DarkBlue}" BorderBrush="{StaticResource FG_BlueLabel}" BorderThickness="1" CornerRadius="0" Padding="0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" Opacity="0.3"/>
                            </Border.Effect>

                            <ItemsControl ItemsSource="{Binding AvailableCharacters}" ItemTemplate="{StaticResource MyCharacterItemTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Width="280" Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Border>
                    </Popup>
                </Grid>
            </Border>
        </Border>

        <Label Content="{Binding ErrorText, UpdateSourceTrigger=PropertyChanged}" FontFamily="Franklin Gothic Demi" Foreground="Red" FontSize="18" Margin="0, 0, 0, 10" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
       
    </Grid>
</kwin:kWindow>
