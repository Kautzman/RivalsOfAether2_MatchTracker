<kwin:kWindow x:Class="Rivals2Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rivals2Tracker"
        xmlns:controls="clr-namespace:Rivals2Tracker.Resources.Controls"
        xmlns:kwin="clr-namespace:kWindows.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="1400" Width="2560"
        Style="{StaticResource BaseWindow}">
    <kwin:kWindow.DataContext>
        <local:MainWindow_VM />
    </kwin:kWindow.DataContext>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="8, 4, 8, 8" />
    </WindowChrome.WindowChrome>
    <Grid>
        <DockPanel>
            <!-- Top Bar-->
            <Grid DockPanel.Dock="Top" Background="{StaticResource BG_DarkBlue}" Height="130" MouseDown="EnableDrag" Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Panel.ZIndex="1000">
                    <Grid Margin="145, 8, 0, 0">
                        <TextBox Text="KADECGOS" FontFamily="Franklin Gothic Demi Cond" Background="Transparent" Foreground="{StaticResource FG_BlueLabel}" FontSize="42" Height="60" VerticalAlignment="Top" />
                        <TextBox Text="1013" Margin="0, 0, 0, 10" FontFamily="{StaticResource AfterDisaster}" Background="Transparent" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Height="60" VerticalAlignment="Bottom" />
                    </Grid>

                    <Label Content="VS" FontFamily="Franklin Gothic Demi Cond" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Margin="30, 0, 0, 0" VerticalAlignment="Center" />

                    <Grid Margin="0, 8, 0, 0">
                        <Image Width="74" Height="74" />
                        <TextBox Text="CARRIEDBYHO..." Margin="85, 0, 0, 0" FontFamily="Franklin Gothic Demi Cond" Background="Transparent" Foreground="{StaticResource FG_BlueLabel}" FontSize="42" Height="60" VerticalAlignment="Top" />
                        <TextBox Text="1090" Margin="85, 0, 0, 10" FontFamily="{StaticResource AfterDisaster}" Background="Transparent" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Height="60" VerticalAlignment="Bottom" />
                    </Grid>

                    <Button FontSize="78" Foreground="{StaticResource FG_BlueLabel}" Background="{StaticResource BG_DarkBlue}" BorderBrush="{StaticResource FG_BlueLabel}"
                            Height="80" Width="80" Margin="15, 0, 0, 0" VerticalContentAlignment="Center">
                        <TextBlock Text="+" Foreground="White" FontSize="64" Height="80" Margin="0, 0, 0, 18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>

                <Label Content="MATCH IN PROGRESS" FontFamily="Franklin Gothic Demi" FontStyle="Italic" Foreground="{StaticResource FG_WhiteLabel}" FontSize="48" Margin="0, 0, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Center" />

                <StackPanel VerticalAlignment="Bottom">
                    <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom" />
                    <Border BorderBrush="{StaticResource FG_DarkGold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom"/>
                    <Border BorderBrush="{StaticResource FG_DarkDarkGold}" BorderThickness="0, 1, 0, 0" VerticalAlignment="Bottom"/>
                </StackPanel>

                <Border Width="450" Height="80" BorderBrush="{StaticResource FG_DarkGold}" BorderThickness="2" Background="{StaticResource BG_DarkBlue}" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                               CornerRadius="25" Margin="0, 0, 0, -30">
                    <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="3" Background="{StaticResource BG_DarkBlue}" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                               CornerRadius="20" Margin="0">
                        <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="1" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                               CornerRadius="15" Margin="0" Loaded="OuterBorder_Loaded">
                            <Grid Width="450" Height="80">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="WIN" Width="150" Height="80" FontSize="32" FontFamily="Franklin Gothic Demi Cond" BorderThickness="0" Background="{StaticResource BG_DarkBlue}" Foreground="{StaticResource FG_BlueLabel}" Padding="0, 0, 0, 12"/>
                                    <Button Content="LOSE" Width="150" Height="80" FontSize="32" FontFamily="Franklin Gothic Demi Cond" BorderThickness="3, 0, 3, 0" Background="{StaticResource BG_DarkBlue}" Foreground="{StaticResource FG_BlueLabel}" Padding="0, 0, 0, 12"/>
                                    <Button Content="CANCEL" Width="150" Height="80" FontSize="28" FontFamily="Franklin Gothic Demi Cond" BorderThickness="0" Background="{StaticResource BG_DarkBlue}" Foreground="{StaticResource FG_BlueLabel}" VerticalContentAlignment="Center" Padding="0, 0, 15, 12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Border>
                </Border>

                <Grid HorizontalAlignment="Right" Margin="0, 0, 100, 0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <Label Content="Patch:" FontFamily="Franklin Gothic Demi" FontStyle="Italic" Foreground="{StaticResource FG_BlueLabel}" FontSize="48" Margin="30, 0, 0, 0"  />
                        <TextBox Text="1.3.2" FontFamily="{StaticResource AfterDisaster}" Background="Transparent" Foreground="{StaticResource FG_WhiteLabel}" FontSize="42" Height="60" Margin="10, 6, 20, 0"/>
                    </StackPanel>

                    <TextBox Text="Write some notes here about the match if you want!" FontFamily="Franklin Gothic Demi" Background="Transparent" Foreground="{StaticResource FG_GreyLabel}" FontSize="24" Height="60" Margin="0, 0, 20, 5"
                         VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                </Grid>

                <Button Width="68" Content="&#xE713;" FontSize="38" FontFamily="Segoe MDL2 Assets" Height="68" HorizontalAlignment="Right" Margin="0, 0, 35, 0" Foreground="{StaticResource FG_BlueLabel}" Background="{StaticResource BG_DarkBlue}" BorderBrush="{StaticResource FG_BlueLabel}">
                </Button>
            </Grid>

            <!-- Bottom Content-->
            <Grid DockPanel.Dock="Bottom" Background="{StaticResource BG_DarkBlue}" Panel.ZIndex="1">
                <Image Source="pack://application:,,,/ImageResources/embossLogo2.png" Opacity="0.08" Width="900"/>


                <Label Content="Recent Matches" FontFamily="Franklin Gothic Demi" FontSize="32" Margin="50, 25, 0, 0"/>

                <ListView ItemsSource="{Binding MatchResults}" ItemTemplate="{StaticResource MatchResultsFancy}" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"
                          BorderThickness="0" Margin="10, 70, 0, 45">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource CustomListViewItemStyle}">
                            <Setter Property="Padding" Value="0, 2, 15, 0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <Grid Margin="963, 70, 0, 45" Background="Transparent">
                    <controls:ToggleSwitch x:Name="ResultTypeToggle" HorizontalAlignment="Left" VerticalAlignment="Top" OffContent="Seasonal"
                        OnContent="Lifetime" IsOn="{Binding ShowLifetimeResults, Mode=TwoWay}" Margin="203, 0, 0, 0" />

                    <ListView ItemsSource="{Binding CurrentSeasonResults.CharacterData}" ItemTemplate="{StaticResource MetaResultTemplateFancy}" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"
                            BorderThickness="0" Margin="0, 50, 0, 0" SelectedItem="{Binding ActiveMatchSeason_CharacterData}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource CustomListViewItemStyle}">

                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>

                <ListView ItemsSource="{Binding ActiveMatchHistory}" ItemTemplate="{StaticResource MatchResultsFancy}" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top"
                          BorderThickness="0" Margin="10, 70, 0, 45">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource CustomListViewItemStyle}">
                            <Setter Property="Padding" Value="0, 2, 15, 0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </DockPanel>

        <Border BorderBrush="{StaticResource GR_DarkBlue}" BorderThickness="4" Margin="15, 15, 0, 0" Width="128" Height="128" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="4">
                <Image Source="pack://application:,,,/ImageResources/Portraits/wrastor_portrait.png" Panel.ZIndex="1000"/>
            </Border>
        </Border>
    </Grid>
</kwin:kWindow>
