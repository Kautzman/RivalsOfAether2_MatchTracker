<UserControl x:Class="Rivals2Tracker.Resources.Controls.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rivals2Tracker.Resources.Controls"
             mc:Ignorable="d"
             x:Name="Root">
    <UserControl.Resources>
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header Text -->
                            <TextBlock Grid.Row="0"
                                       Visibility="Collapsed"
                                     Text="{Binding Header, ElementName=Root}"
                                     Margin="0,0,0,5"
                                     FontSize="22"
                                     Foreground="{StaticResource FG_WhiteLabel}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Header, ElementName=Root}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Header, ElementName=Root}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Switch Container -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Off Label -->
                                <TextBlock Grid.Column="0" 
                                         Text="{Binding OffContent, ElementName=Root}"
                                         VerticalAlignment="Center"
                                         FontSize="20"
                                         FontFamily="Franklin Gothic Demi Cond"
                                         Foreground="{StaticResource FG_WhiteLabel}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Opacity" Value="0.6"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="False">
                                                    <Setter Property="Foreground" Value="{StaticResource FG_WhiteLabel}" />
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Toggle Switch Track -->
                                <Border Grid.Column="1" 
                                      Width="50" 
                                      Height="30" 
                                      CornerRadius="12"
                                      Background="Transparent"
                                      BorderThickness="2"
                                      BorderBrush="{StaticResource LGR_Gold}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                    <Setter Property="Background" Value="#0078D4"/>
                                                    <Setter Property="BorderBrush" Value="#106EBE"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#A0A0A0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <!-- Toggle Thumb -->
                                    <Ellipse Width="20" 
                                           Height="20" 
                                           Fill="{StaticResource FG_BlueLabel}"
                                           Stroke="{StaticResource FG_BlueLabel}"
                                           StrokeThickness="1"
                                           HorizontalAlignment="Left"
                                           Margin="2,0">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <TranslateTransform X="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.X"
                                                                                   To="22" Duration="0:0:0.10"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.X"
                                                                                   To="0" Duration="0:0:0.10"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </Border>

                                <!-- On Label -->
                                <TextBlock Grid.Column="2" 
                                         Text="{Binding OnContent, ElementName=Root}"
                                         VerticalAlignment="Center"
                                         FontSize="20"
                                           FontFamily="Franklin Gothic Demi Cond"
                                         Foreground="{StaticResource FG_WhiteLabel}" >
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource FG_WhiteLabel}" />
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <CheckBox Style="{StaticResource ToggleSwitchStyle}" 
              IsChecked="{Binding IsOn, ElementName=Root, Mode=TwoWay}"
              IsEnabled="{Binding IsEnabled, ElementName=Root}"/>
</UserControl>
