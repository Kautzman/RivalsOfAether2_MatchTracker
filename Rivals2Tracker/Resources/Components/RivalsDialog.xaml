<kwin:kWindow x:Class="Slipstream.Resources.Components.RivalsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slipstream.Resources.Components"
        xmlns:kwin="clr-namespace:kWindows.Core"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="RivalsDialog" Height="280" Width="700">
    <kwin:kWindow.DataContext>
        <local:RivalsDialog_VM />
    </kwin:kWindow.DataContext>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="8, 4, 8, 8" />
    </WindowChrome.WindowChrome>
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" Background="{StaticResource LGR_Banner}" Height="60">
                <Label Content="{Binding Title}" FontSize="22" HorizontalAlignment="Center"/>

                <StackPanel VerticalAlignment="Bottom">
                    <Border BorderBrush="{StaticResource FG_Gold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom" />
                    <Border BorderBrush="{StaticResource FG_DarkGold}" BorderThickness="0, 3, 0, 0" VerticalAlignment="Bottom"/>
                    <Border BorderBrush="{StaticResource FG_DarkDarkGold}" BorderThickness="0, 1, 0, 0" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Grid>

            <Grid DockPanel.Dock="Bottom" Background="{StaticResource LGR_Blue_Opacity}">
                <DockPanel>
                    <Grid DockPanel.Dock="Right" Width="220">
                        <StackPanel Margin="10, 10, 10, 0">
                            <Button Content="{Binding Option1}" />
                            <Button Content="{Binding Option2}" Margin="0, 10, 0, 0"/>
                            <Button Content="{Binding Option3}" Margin="0, 10, 0, 0"/>
                        </StackPanel>
                    </Grid>

                    <Grid DockPanel.Dock="Left" >
                        <TextBlock Text="{Binding MessageContent}" Foreground="White" FontSize="16" TextWrapping="Wrap" Margin="10, 10, 10, 0"></TextBlock>
                    </Grid>

                </DockPanel>
            </Grid>
        </DockPanel>
    </Grid>
</kwin:kWindow>
