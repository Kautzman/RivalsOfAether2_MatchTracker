<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:data="clr-namespace:Rivals2Tracker.Models">
    <DataTemplate x:Key="MatchResultsTemplate" DataType="{x:Type data:MatchResult}">
        <Grid Height="75">
            <StackPanel Orientation="Horizontal">
                <Grid Width="680">
                    <Label Content="{Binding ID}" Width="40" FontSize="11" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="5, 0, 0, 0" Foreground="{StaticResource FG_Component}"/>
                    <Label Content="{Binding Result}" Width="40" Margin="5, 18, 0, 0" HorizontalAlignment="Left" HorizontalContentAlignment="Center" FontSize="16"  Foreground="{StaticResource FG_Component}"/>
                    <Label Content="{Binding Patch}" Width="40" FontSize="11" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="5, 45, 0, 0" Foreground="{StaticResource FG_Component}"/>

                    <Label Content="{Binding Date}" Width="120" HorizontalContentAlignment="Right" Margin="10, 0, 0, 0" Foreground="{StaticResource FG_Component}" HorizontalAlignment="Right" FontSize="11"/>

                    <StackPanel Margin="50, 5, 0, 0" Orientation="Horizontal">
                        <Border BorderBrush="#585858" BorderThickness="1, 0, 0, 0" />
                        <Label Content="{Binding OpponentElo}" Width="50" Margin="10, 0, 0, 0" Foreground="#DFDFDF" FontWeight="DemiBold"/>
                        <Label Content="{Binding MyElo}" Width="50" Margin="10, 0, 0, 0" Foreground="#DFDFDF" FontWeight="DemiBold"/>

                        <Border BorderBrush="#585858" BorderThickness="1, 0, 0, 0" Margin="0, 0, 0, 35"/>

                        <Label Content="{Binding Opponent}" Width="120" Margin="10, 0, 0, 0" Foreground="{StaticResource FG_Component}" HorizontalContentAlignment="Center" />
                        <Label Content="{Binding Opponent2}" Width="120" Margin="0, 0, 0, 0" Foreground="{StaticResource FG_Component}" HorizontalContentAlignment="Center" />
                        <Label Content="{Binding Opponent3}" Width="120" Margin="0, 0, 0, 0" Foreground="{StaticResource FG_Component}" HorizontalContentAlignment="Center" />
                        <Border BorderBrush="#585858" BorderThickness="1, 0, 0, 0" Margin="30, 0, 0, 35"/>
                    </StackPanel>

                    <Grid Margin="50, 30, 0, 0">
                        <Label Content="{Binding Notes}" FontSize="12" Width="120" Margin="20, 10, 0, 0" Foreground="{StaticResource FG_Control_Disabled}" HorizontalAlignment="Left"/>
                    </Grid>

                    <Border BorderBrush="#585858" BorderThickness="0, 0, 0, 1" Margin="20, 0, 10, 0"/>
                </Grid>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>